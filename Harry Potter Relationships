/* Create table of Harry Potter Characters */
CREATE TABLE characters (ID INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    gender TEXT,
    strength INTEGER,
    alignment TEXT);

/*Populate table */
INSERT INTO characters (name, gender, strength, alignment) VALUES ('Harry Potter', 'male', 6, 'good');
